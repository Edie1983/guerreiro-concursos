rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para arquivos de editais
    // Estrutura: editais/{userId}/{fileName}
    match /editais/{userId}/{allPaths=**} {
      // Permite ler e escrever apenas se o userId do caminho for igual ao uid do usu√°rio autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}












